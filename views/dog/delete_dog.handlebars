<main id="delete_dog">
    <div class="titleinfo">
        <center><h2>Delete a Dog</h2>
        <p> Please input dog's name that you wish to delete.
        </p></center>
    </div>

    <div class="ownerinfo">
        <input type="text" id="dogName" class="input" name= "dogName" placeholder="Dog's Name">
        <button class="btn" name="button1" style="margin-top: 5%" onclick="deleteDog()">Delete Dog</button>
    </div>
</main>

<script>
    function deleteDog() {
        var name = document.getElementById("dogName").value;
        window.location = "/dogs/delete_dog/" + encodeURI(name);
    }
</script>
