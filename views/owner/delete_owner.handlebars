<main id="delete_owner">
    <div class="titleinfo3">
        <center><h2>Delete Owner</h2>
        <p> Please input the owner's name that you would like to delete.
        </p></center>
    </div>

    <div class="deleteinfo">
        <input type="text" id="ownerName" class="input" name= "ownerName" placeholder="Name">
        <button class="btn" name="button1" style="margin-top: 5%" onclick="deleteOwner()">Delete Owner</button>
    </div>
</main>

<script>
    function deleteOwner() {
        var name = document.getElementById("ownerName").value;
        window.location = "/owners/delete_owner/" + encodeURI(name);
    }
</script>
